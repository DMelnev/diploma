{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block body %}
    <div class="Middle Middle_top">
        <div class="Middle-top">
            <div class="wrap">
                <div class="Middle-header">
                    <h1 class="Middle-title">Личный кабинет</h1>
                    <ul class="breadcrumbs Middle-breadcrumbs">
                        <li class="breadcrumbs-item">
                            <a href="{{ url('app_main') }}">Главная</a>
                        </li>
                        <li class="breadcrumbs-item breadcrumbs-item_current">
                            <span>Личный кабинет</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                {% include('user/block/navigateProfile.html.twig') %}
                <div class="Section-content">
                    <div class="Account">
                        <div class="Account-group">
                            <div class="Account-column">
                                {% if app.user.avatar is not null %}
                                    <div class="Account-avatar">
                                        <img src="{{ absolute_url('/img/content/home/'~ app.user.avatar) }}"
                                             alt="{{ app.user.avatar }}"/>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="Account-column">
                                <div class="Account-name">{{ app.user.name }}</div>
                                <a class="Account-editLink"
                                   href="{{ url('app_user_profile') }}">Редактировать профиль</a>
                            </div>
                        </div>
                        <div class="Account-group">
                            <div class="Account-column Account-column_full">
                                {% include 'user/block/showOrder.html.twig' with {'order': cart, 'history':true} %}
                            </div>
                        </div>
                        <div class="Account-group">
                            <div class="Account-column Account-column_full">
                                <header class="Section-header">
                                    <h2 class="Section-title">История просмотров</h2>
                                </header>
                                <div class="Cards Cards_account">
                                    {% include 'user/block/products.html.twig' with {'products':history} %}
                                </div>
                                <div class="Account-editLink Account-editLink_view">
                                    <a href="{{ url('app_user_view_history') }}">Перейти на полный список</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
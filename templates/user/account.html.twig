{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block body %}
    <div class="Middle Middle_top">
        <div class="Middle-top">
            <div class="wrap">
                <div class="Middle-header">
                    <h1 class="Middle-title">Личный кабинет</h1>
                    <ul class="breadcrumbs Middle-breadcrumbs">
                        <li class="breadcrumbs-item"><a href="{{ url('app_main') }}">Главная</a></li>
                        <li class="breadcrumbs-item breadcrumbs-item_current"><span>Личный кабинет</span></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                {% include('user/navigateProfile.html.twig') %}
                <div class="Section-content">
                    <div class="Account">
                        <div class="Account-group">
                            <div class="Account-column">
                                {% if app.user.avatar is not null %}
                                    <div class="Account-avatar"><img
                                                src="{{ absolute_url('/img/content/home/'~ app.user.avatar) }}"
                                                alt="{{ app.user.avatar }}"/>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="Account-column">
                                <div class="Account-name">{{ app.user.name }}
                                </div>
                                <a class="Account-editLink" href="{{ url('app_user_profile') }}">Редактировать
                                    профиль</a>
                            </div>
                        </div>
                        <div class="Account-group">
                            <div class="Account-column Account-column_full">
                                {% include 'user/showOrder.html.twig' with {'order': cart, 'history':true} %}
                            </div>
                        </div>
                        <div class="Account-group">
                            <div class="Account-column Account-column_full">
                                <header class="Section-header">
                                    <h2 class="Section-title">История просмотров
                                    </h2>
                                </header>
                                <div class="Cards Cards_account">

                                    {% for product in history %}
                                        <div class="Card"><a class="Card-picture" href="#">
                                                <img src="{{ asset('img/content/home/'~product.link) }}"
                                                     alt="{{ product.link }}"/>
                                            </a>
                                            <div class="Card-content">
                                                <strong class="Card-title">
                                                    <a href="#">{{ product.name }}</a>
                                                </strong>
                                                <div class="Card-description">
                                                    <div class="Card-cost">
                                                        {% if product.discount is not null %}
                                                            <span class="Card-priceOld">{{ product.price|end_cost }}</span>
                                                            <span class="Card-price">{{ (product.price - product.price*product.discount/100)|end_cost }}</span>
                                                        {% else %}
                                                            <span class="Card-price">{{ product.price|end_cost }}</span>
                                                        {% endif %}
                                                    </div>
                                                    <div class="Card-category">
                                                        {{ product.section }}{% if product.group is not null %} / {{ product.group }}{% endif %}
                                                    </div>
                                                    <div class="Card-hover">
                                                        <a class="Card-btn" href="#">
                                                            <img src="{{ asset('assets/img/icons/card/bookmark.svg') }}"
                                                                 alt="bookmark.svg"/>
                                                        </a>
                                                        <a class="Card-btn" href="#">
                                                            <img src="{{ asset('assets/img/icons/card/cart.svg') }}"
                                                                 alt="cart.svg"/>
                                                        </a>
                                                        <a class="Card-btn" href="#">
                                                            <img src="{{ asset('assets/img/icons/card/change.svg') }}"
                                                                 alt="change.svg"/>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            {% if product.discount is not null %}
                                                <div class="Card-sale">-{{ product.discount }}%</div>
                                            {% endif %}
                                        </div>
                                    {% else %}
                                        Записей не найдено
                                    {% endfor %}

                                </div>
                                <div class="Account-editLink Account-editLink_view"><a
                                            href="{{ url('app_user_view_history') }}">Перейти
                                        на полный список</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
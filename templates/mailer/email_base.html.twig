{% apply inline_css(source('@css/email/email.css')) %}
    <!doctype html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width"/>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <title>{{ email.subject }}</title>
    </head>
    <body class="">
    <table role="presentation" class="body">
        <tr>
            <td>&nbsp;</td>
            <td class="container">
                <div class="content">


                    <div class="header">
                        <table role="presentation" >
                            <tr>
                                <td class="content-block">
                                    <h1><a href="{{ url('app_main') }}">Товарный агрегатор Megano</a></h1>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!-- START CENTERED WHITE CONTAINER -->
                    <table role="presentation" class="main">

                        <!-- START MAIN CONTENT AREA -->
                        <tr>
                            <td class="wrapper">
                                <table role="presentation">
                                    <tr>
                                        <td>
                                            {% block content %}
                                            {% endblock %}
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>

                        <!-- END MAIN CONTENT AREA -->
                    </table>
                    <!-- END CENTERED WHITE CONTAINER -->

                    <!-- START FOOTER -->
                    <div class="footer">
                        <table role="presentation">
                            <tr>
                                <td class="content-block">
                                    <span>Товарный агрегатор Megano</span>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <!-- END FOOTER -->

                </div>
            </td>
            <td>&nbsp;</td>
        </tr>
    </table>
    </body>
    </html>
{% endapply %}
